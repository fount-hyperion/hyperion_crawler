# Application
APP_NAME=hyperion-crawler
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/hyperion

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCP_REGION=asia-northeast3
GCP_STORAGE_BUCKET=hyperion-crawler-data
GCP_BIGQUERY_DATASET=financial_data

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Crawler Settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# API Keys (for external services)
DART_API_KEY=your-dart-api-key
SEC_USER_AGENT=your-email@example.com
TIPRANKS_API_KEY=your-tipranks-api-key

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317